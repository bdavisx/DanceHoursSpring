<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <settings>
        <setting name="useGeneratedKeys" value="false"/>
    </settings>

    <typeAliases>
        <typeAlias alias="DanceUser" type="com.tartner.dancehours.domain.DanceUser"/>

        <typeAlias alias="UUID" type="java.util.UUID"/>
        <typeAlias alias="UUIDTypeHandler" type="com.tartner.databasesupport.UUIDTypeHandler"/>
    </typeAliases>

    <typeHandlers>
        <typeHandler handler="UUIDTypeHandler" javaType="UUID"/>
    </typeHandlers>

    <!-- setup environment with JDBC data source
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/dance_hours"/>
                <property name="" value=""
            </dataSource>
        </environment>
    </environments>
    -->

    <!-- mapping files -->
    <mappers>
        <mapper resource="DanceUser.xml"/>
    </mappers>

</configuration>
